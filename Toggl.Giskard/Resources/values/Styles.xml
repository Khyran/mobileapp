<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/lightGray</item>
    </style>

    <color name="lightBackground">#fafbfc</color>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="appCardColor">@android:color/white</item>
        <item name="appBackgroundColor">#fafbfc</item>
        <item name="appCellBackgroundColor">@android:color/white</item>
        <item name="appTextColor">@android:color/black</item>
        <item name="appSeparatorColor">#e5e5e5</item>
        <item name="appBottomBarColor">@android:color/white</item>
        <item name="appErrorColor">#e20505</item>
        <item name="android:actionBarSize">56dp</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:colorAccent">#328FFF</item>
        <item name="colorControlActivated">#328FFF</item>
        <item name="android:statusBarColor">#2C2C2C</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowBackground">@color/lightBackground</item>
    </style>
    
    <color name="darkBackground">#303030</color>
    
    <style name="AppTheme.Dark">
        <item name="appCardColor">#424242</item>
        <item name="appBackgroundColor">#303030</item>
        <item name="appCellBackgroundColor">#1e1e1e</item>
        <item name="appTextColor">#ccffffff</item>
        <item name="appSeparatorColor">#535353</item>
        <item name="appBottomBarColor">#1e1e1e</item>
        <item name="appErrorColor">#ff453a</item>
        <item name="android:windowBackground">@color/darkBackground</item>
    </style>

    <style name="AppTheme.BlueStatusBar">
        <item name="android:statusBarColor">@color/blueStatusBarBackground</item>
    </style>

    <style name="AppTheme.WhiteStatusBar">
    </style>

    <style name="AppTheme.WhiteStatusBarLightIcons">
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="AppTheme.LighGrayStatusBar">
        <item name="android:statusBarColor">@color/lightGray</item>
    </style>
    
    <style name="AppTheme.OnboardingStatusBarColor">
        <item name="android:statusBarColor">@color/onboardingStatusBarColor</item>
    </style>

    <style name="AppTheme.OutdatedAppStatusBarColor">
        <item name="android:statusBarColor">#BDBDBD</item>
    </style>
    
    <style name="AppTheme.TransparentActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="TogglDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">#328FFF</item>
		<item name="colorControlActivated">#328FFF</item>
    </style>
    <style name="TextInputLayoutErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/errorText</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextInputLayoutRegularTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/defaultText</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="WheelDialogStyle" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">#328fff</item>
        <item name="android:headerTimeTextAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:headerDayOfMonthTextAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:headerAmPmTextAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:headerMonthTextAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:headerYearTextAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:timePickerStyle">@style/WheelTimePicker</item>
        <item name="android:datePickerStyle">@style/WheelDatePicker</item>
    </style>

    <style name="WheelDatePicker" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@drawable/picker_header_background</item>
    </style>

    <style name="WheelTimePicker" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@drawable/picker_header_background</item>
        <item name="android:numbersSelectorColor">#328fff</item>
    </style>
</resources>
